{
  "name": "home-automation-dashboard",
  "description": "A small dashboard for home automation interaction",
  "version": "0.0.0",
  "author": {
    "name": "Joshua Fraser",
    "url": "https://github.com/Shrugsy"
  },
  "license": "MIT",
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "start": "vite",
    "build": "tsc && vite build",
    "serve": "vite preview",
    "dev": "concurrently -k \"cross-env BROWSER=none yarn start\" \"yarn:electron\"",
    "dev-browser": "concurrently -k \"yarn start\" \"yarn:electron\"",
    "electron": "wait-on tcp:3000 && electron .",
    "test": "vitest run",
    "test-watch": "vitest watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "pack": "yarn build && electron-builder --dir",
    "dist": "yarn build && electron-builder build"
  },
  "build": {
    "appId": "com.electron.home-automation-dashboard",
    "productName": "home-automation-dashboard",
    "copyright": "Copyright Â© 2020 ${author}",
    "win": {
      "icon": "https://cdn2.iconfinder.com/data/icons/designer-skills/128/react-256.png"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "public/electron.js"
    ],
    "directories": {
      "buildResources": "public",
      "output": "dist/home-automation-dashboard_${version}"
    },
    "extends": null
  },
  "dependencies": {
    "@emotion/react": "^11.9.0",
    "@emotion/styled": "^11.8.1",
    "@mui/icons-material": "^5.8.0",
    "@mui/material": "^5.8.0",
    "@reduxjs/toolkit": "^1.8.1",
    "@stordco/msw-toolbar": "^0.2.1",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.4",
    "@vitejs/plugin-react": "^1.3.2",
    "electron-is-dev": "^2.0.0",
    "notistack": "^2.0.5",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-redux": "^8.0.1"
  },
  "devDependencies": {
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/node-fetch": "^2.5.12",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "babel-eslint": "^10.1.0",
    "concurrently": "^7.2.1",
    "cross-env": "^7.0.3",
    "electron": "^19.0.1",
    "electron-builder": "^23.0.3",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-flowtype": "^8.0.3",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.30.0",
    "eslint-plugin-react-hooks": "^4.5.0",
    "jsdom": "^19.0.0",
    "msw": "^0.41.0",
    "node-fetch": "^2.6.6",
    "prettier": "^2.6.2",
    "typescript": "^4.6.4",
    "vite": "^2.7.7",
    "vitest": "^0.12.9",
    "wait-on": "^6.0.1"
  },
  "msw": {
    "workerDirectory": "public"
  }
}
